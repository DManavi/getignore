  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GetIgnore/getignore/issues"
  },
  "homepage": "https://github.com/GetIgnore/getignore#readme",
  "devDependencies": {
    "@types/dashify": "^1.0.1",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.1",
    "@types/prompts": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "preferGlobal": true,
  "dependencies": {
    "@speedup/error": "^1.0.8",
